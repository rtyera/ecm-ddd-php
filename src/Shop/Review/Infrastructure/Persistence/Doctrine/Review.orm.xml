<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="TyCode\Shop\ProductReview\Domain\Review" table="review">
        <id name="id" type="review_id" column="id" length="36" />

        <embedded name="author" class="TyCode\Shop\ProductReview\Domain\Review" use-column-prefix="false" />
        <embedded name="message" class="TyCode\Shop\ProductReview\Domain\Review" use-column-prefix="false" />
        <embedded name="createOn" class="TyCode\Shop\ProductReview\Domain\Review" use-column-prefix="false" />
    </entity>

</doctrine-mapping>
