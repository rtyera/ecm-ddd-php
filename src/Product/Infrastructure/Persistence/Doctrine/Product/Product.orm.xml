<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="TyCode\Product\Domain\Product\Product" table="product">
        <id name="id" type="product_id" column="id" length="36" />

        <embedded name="name" class="TyCode\Product\Domain\Product\ProductName" use-column-prefix="false" />
        <embedded name="price" class="TyCode\Product\Domain\Product\ProductPrice" use-column-prefix="false" />
        <embedded name="images" class="TyCode\Product\Domain\Product\ProductImages" use-column-prefix="false" />
        <embedded name="stockQuantity" class="TyCode\Product\Domain\Product\ProductStockQuantity" use-column-prefix="false" />
    </entity>

</doctrine-mapping>
